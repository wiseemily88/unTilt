<h4>Edit Your Account Below: </h4>

<div class='container'>

<%= form_for @user, :html => {:class => "form-horizontal center"} do |f| %>

      <div class="form-group">
        <%= f.label :first_name, "First Name:", class: "col-md-4 control-label" %>
        <div class="col-md-8">
          <%= f.text_field :first_name, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :last_name, "Last Name:", class: "col-md-4 control-label" %>
        <div class="col-md-8">
          <%= f.text_field :last_name, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :email, "Email:", class: "col-md-4 control-label" %>
        <div class="col-md-8">
          <%= f.text_field :email, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :job_title, "Job Title:", class: "col-md-4 control-label" %>
        <div class="col-md-8">
          <%= f.text_field :job_title, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :department, "Department:", class: "col-md-4 control-label" %>
          <div class="col-md-8">
            <%= f.text_field :department, class: "form-control" %>
          </div>
        </div>
      <%= f.submit "Submit", class: "btn btn-lg btn-primary" %>
 <% end %>
</div>
