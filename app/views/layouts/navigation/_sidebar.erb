<div class="main-sidebar">
  <div class="sidebar">
    <div class="user-panel">
      <div class="pull-left info">
        <p>
          <% if current_user.nil? %>
        <%else%>
          Welcome <%=current_user.first_name %> <%current_user.last_name%> !
          <%end%>
        </p>

      </div>
    </div>

    <ul class="sidebar-menu">

      <li class="active">
        <a href="/dashboard">
      <span> Dashboard </span>
      </a>
      </li>
      <li>
        <% if current_user.nil? %>
        <a href="/login">
        <span>Login</span>
        </a>
        <% else %>
        <%=link_to("Logout", logout_path, method: :delete) %>
        <%end%>
      </li>
      </li>
    </ul>
  </div>
</div>
