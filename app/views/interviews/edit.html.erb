
<div class="container">
    <h4> Please Update the Interview </h4>
    <div class="row">
      <div class="col-sm-6">
        <h6 class="card-text">  Date: <%=@interview.date %> </h6>
        <h6 class="card-text">  First Name: <%=@interview.candidate.first_name %> </h6>
        <h6 class="card-text">  Last Name: <%=@interview.candidate.last_name %> </h6>
        <h6 class="card-text">  Target Role: <%=@interview.candidate.target_role %> </h6><br>
      </div>
    </div>
</div>

<div class="container">
  <div class="row">
  <div class="col-sm-3">
    <p> Competency Name: </p>
    <p> Competency Description: </p>
  </div>
  <%@interview.competencies.each do |competency| %>
  <div class="col-sm-3">
    <p><%= competency.name %></p>
    <p><%= competency.description %></p>
  </div>
  <%end%>
</div>
</div>
<div class="container">
  <%= form_for ([ @interview]), :html => {:class => "form-horizontal center"} do |f| %>
    <div class="row">
      <div class="col-sm-3">
        <p> Competency Score: </p>
      </div>
      <%= f.fields_for :interview_competencies do |builder| %>
        <div class="col-sm-3">
      <%= builder.text_field :competency_score, class: "form-control" %>
      </div>
      <%end%>
    </div>
  </div>

<div class="container">
<div class="form-group">
  <%=f.label :score, "Interview Score:", class:"col-sm-4 col-form-label" %>
  <div class="col-sm-4">
  <%= f.text_field :score, class: "form-control"%>
  </div>
  <%= f.label :comment, "Overall Comment:", class: "col-md-4 control-label" %>
  <div class="col-md-6">
    <%= f.text_area :comment, class: "form-control" %>
  </div>
</div>

<%= f.submit "Submit", class: "btn btn-default btn-primary" %>
<% end %>
</div>
