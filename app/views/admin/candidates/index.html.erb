<div class="container">
<h4> Current Candidates: </h4>
  <% @candidates.each do |candidate| %>
  <ul class="list-group">
    <li class="list-group-item"><%= link_to "Show Details for Upcoming Interviews", admin_candidate_path(candidate.id) %> </li>
    <li class="list-group-item"> <strong>Candidate:</strong> <%= candidate.first_name %> <%= candidate.last_name %></li>
    <li class="list-group-item"> <strong>Role:</strong> <%= candidate.target_role %> </li> <br>
    </ul>
  <%end %>
  <a href="/admin/candidates/new" class="btn btn-primary btn-lg primary" role="button" aria-disabled="true">Create a New Candidate</a>
</div>
