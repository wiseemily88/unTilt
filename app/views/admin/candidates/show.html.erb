<div class="container">
<div class="card">
<h4 class="card-title"> Candidate Name: <%=@candidate.first_name%> <%=@candidate.last_name%></h4>
<p class="card-text"> Target Role <%=@candidate.target_role%> </p>

  <div class="card-body">
<h6> All Interviews </h6>
<% @candidate.interviews.map do |interview| %>
  <ul class="list-group">
  <li class="list-group-item"> Date: <%=interview.date%> </li>
  <li class="list-group-item"> Status: <%=interview.status%> </li>
  <li class="list-group-item"> Interviewers: <%=interview.user.first_name%> <%=interview.user.last_name%></li> <br>
</ul>
<%end%>
</div>
</div>
