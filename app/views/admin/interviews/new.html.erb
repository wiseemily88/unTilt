
<%= form_for ([:admin, @interview]), :html => {:class => "form-horizontal center"} do |f| %>

<div class="form-group">
  <%= f.label :date, "Interview Date:", class: "col-md-4 control-label" %>
  <div class="col-md-8">
    <%= f.date_field :date, class: "form-control" %>
  </div>
</div>

<div class="field">
  <%= f.label :candidate_id %>
  <%= f.select(:candidate_id,   @candidates_options) %>
</div>

<div class="field">
  <%= f.label :interview_id %>
  <%= f.select(:user_id,   @interviewers_options) %>
</div>

  <ul>
  <% @attributes.each do |attribute| %>
      <li>
        <%= check_box_tag 'attribute_ids[]', attribute.id, :id => "attribute_#{attribute.id}" -%>
        <%= h attribute.name -%>
      </li>
  <% end %>
</ul>


<%= f.submit "Submit", class: "btn btn-default btn-primary" %>
<% end %>
<%= debug params %>
